{% extends 'baseadmin.html.twig' %}
 {% block rigth_content %}
     <h2>Formulaire d'article</h2>
     <div class="well">
         {{ form_start(form, {'attr': {'class': 'form-horizontal','novalidate': 'novalidate'}}) }}

         {# Les erreurs générales du formulaire. #}
         {{ form_errors(form) }}
         <div class="form-group">
             {# Génération du label. #}
             {{ form_label(form.date, "Date de l'article", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

             {# Affichage des erreurs pour ce champ précis. #}
             {{ form_errors(form.date) }}

             <div class="col-sm-4">
                 {# Génération de l'input. #}
                 {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
             </div>
         </div>
         <div class="form-group">
             {# Génération du label. #}
             {{ form_label(form.categories, "Categorie", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

             {# Affichage des erreurs pour ce champ précis. #}
             {{ form_errors(form.categories) }}

             <div class="col-sm-4">
                 {# Génération de l'input. #}
                 {{ form_widget(form.categories, {'attr': {'class': 'form-control'}}) }}
             </div>
         </div>

         <div class="form-group">
             {# Génération du label. #}
             {{ form_label(form.titre, "Titre de l'article", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

             {# Affichage des erreurs pour ce champ précis. #}
             {{ form_errors(form.titre) }}

             <div class="col-sm-4">
                 {# Génération de l'input. #}
                 {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
             </div>
         </div>

         {# Idem pour un autre champ. #}
         <div class="form-group">
             {{ form_label(form.contenu, "Contenu de l'article", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
             {{ form_errors(form.titre) }}
             <div class="col-sm-4">
                 {{ form_widget(form.contenu, {'attr': {'class': 'form-control'}}) }}
             </div>
         </div>
         <div class="form-group">
             {{ form_label(form.motcle, "Mot clé de l'article", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
             {{ form_errors(form.contenu) }}
             {{ form_errors(form.titre) }}
             <div class="col-sm-4">
                 {{ form_widget(form.motcle, {'attr': {'class': 'form-control'}}) }}
             </div>
         </div>

         {# Génération du label + error + widget pour un champ #}




         <div class="form-group">
             {# Génération du label. #}
             {{ form_label(form.imagefile, "Image à la une", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

             {# Affichage des erreurs pour ce champ précis. #}
             {{ form_errors(form.imagefile) }}

             <div class="col-sm-4">
                 {# Génération de l'input. #}
                 <img src="{{  asset('uploads/img/')}}{{ article.image }} " alt="no-image" />
<br/>
                 {{ form_widget(form.imagefile, {'attr': {'class': 'form-control'}}) }}

             </div>
         </div>
         <div class="form-group">

             {{ form_label(form.published, "Publier", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

             {# Affichage des erreurs pour ce champ précis. #}
             {{ form_errors(form.published) }}

             <div class="col-sm-4">
                 {# Génération de l'input. #}
                 {{ form_widget(form.published, {'attr': {'class': 'form-control'}}) }}
             </div>
         </div>

         <div class="form-group">
             {# Génération du label. #}
             {{ form_label(form.auteur, "Auteur", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

             {# Affichage des erreurs pour ce champ précis. #}
             {{ form_errors(form.auteur) }}

             <div class="col-sm-4">
                 {# Génération de l'input. #}
                 {{ form_widget(form.auteur, {'attr': {'class': 'form-control'}}) }}
             </div>
         </div>
         {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
         {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

         {# Génération automatique des champs pas encore écrits.
            Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
            et tous les champs cachés (type « hidden »). #}
         {{ form_rest(form) }}

         {# Fermeture de la balise <form> du formulaire HTML #}
         {{ form_end(form) }}
     </div>

 {% endblock %}